<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/incoming_message"
        android:textSize="22sp" />
     <View
            style="@style/line_1dp"
            android:layout_height="2dp"
            android:layout_width="match_parent"/>

    <ListView
        android:id="@+id/listV"
        android:choiceMode="singleChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:scrollingCache="false"
        >
    </ListView> 

    
    <LinearLayout 
            android:id="@+id/ok"
            android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        >
          <View
              android:layout_gravity="center"
            style="@style/line_1dp"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            />
        <LinearLayout
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:maxEms = "6"
                android:hint="@string/please_write_name"
                android:background="@drawable/selector_edittext_background"
                android:inputType="text"
                android:paddingLeft="4dip"
                android:singleLine="true" />
        </LinearLayout>

               <LinearLayout
         
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phone"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/selector_edittext_background"
                android:inputType="phone"
                    android:hint="@string/please_write_phone"
                android:paddingLeft="4dip"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
     >

 

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
               android:layout_weight="1"
            android:text="@string/cancel"
                   android:gravity="center"
            android:textColor="@drawable/selector_text_cancel" />
               <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="@string/confirm"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/selector_text_confirm" />
        </LinearLayout>
	</LinearLayout>
</LinearLayout>