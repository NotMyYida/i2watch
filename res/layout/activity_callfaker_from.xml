<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="${packageName}.${activityClass}" >

        <TextView
        android:id="@+id/tv_random"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
                android:textColor="@drawable/selector_text_confirm"
                android:clickable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="通讯录随机"
        />
               <View
              android:layout_gravity="center"
            style="@style/line"
            android:layout_width="200dp"
            />
        <TextView
                        android:clickable="true"
        android:id="@+id/tv_choose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
                android:textColor="@drawable/selector_text_confirm"
        android:gravity="center"
        android:padding="12dp"
        android:text="通讯录选择"
        />
              <View
              android:layout_gravity="center"
            style="@style/line"
            android:layout_width="200dp"
            />
        <TextView
                        android:clickable="true"
        android:id="@+id/tv_custom"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:textColor="@drawable/selector_text_confirm"
        android:gravity="center"
        android:padding="12dp"
        android:text="自定义"
         />
           <View
              android:layout_gravity="center"
            style="@style/line"
            android:layout_width="200dp"
            />
        
    <LinearLayout 
        android:visibility="gone"
            android:id="@+id/ok"
            android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        

            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:maxEms = "6"
                android:hint="@string/please_write_name"
                android:background="@drawable/selector_edittext_background"
                android:inputType="text"
                android:paddingLeft="4dip"
                android:singleLine="true" />
        </LinearLayout>

               <LinearLayout
         
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/phone"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/selector_edittext_background"
                android:inputType="phone"
                    android:hint="@string/please_write_phone"
                android:paddingLeft="4dip"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
		 >

        <TextView
            android:id="@+id/tv_negative"
           android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:text="@string/cancel"
                     android:background="@drawable/selector_bottom_left_bg"
            android:textColor="@drawable/selector_text_cancel" />
        
        <TextView
            android:id="@+id/tv_positive"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
                       android:gravity="center"
            android:focusable="true"
            android:padding="20dp"
            android:text="@string/confirm"
            android:background="@drawable/selector_bottom_right_bg"
            android:textColor="@drawable/selector_text_confirm" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>