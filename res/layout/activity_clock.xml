                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/weekday"
                            android:text="周三"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_thu_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/weekday"
                            android:text="周四"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_fri_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/weekday"
                            android:text="周五"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sat_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/weekday"
                            android:text="周六"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_item_3"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/selector_switch_checkbox" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>