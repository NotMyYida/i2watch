<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <include
        layout="@layout/top_layout" />
  <View
      android:layout_marginTop="40dp"
                style="@style/line"
            />
    <ScrollView
        android:id="@+id/scl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/itemlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/tv_clock_1"
                    android:text="01:20"
                    style="@style/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_item_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_item_1"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/selector_switch_checkbox" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                style="@style/itemlist"
                android:layout_width="match_parent"
         android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/tv_clock_2"
                    style="@style/clock"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_item_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_item_2"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/selector_switch_checkbox" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                style="@style/itemlist"
                android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/tv_clock_3"
                    style="@style/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_item_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_item_3"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="20dp"
                    android:button="@drawable/selector_switch_checkbox" />
            </LinearLayout>
            

            <View
                style="@style/line"
           />
        </LinearLayout>
    </ScrollView>

</LinearLayout>