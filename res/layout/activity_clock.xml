                            android:id="@+id/tv_mon_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/weekday"
                            android:text="周一"
                            android:textColor="@color/grey"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tue_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
