<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.suping.i2_watch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/goal_top"
        layout="@layout/top_layout" />

    <RelativeLayout
        android:id="@+id/rl_cirle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal_top"
        android:layout_centerHorizontal="true" >

     <!--    <com.suping.i2_watch.view.ColorsCircle
            android:id="@+id/color_circle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            app:background_color="#dddddddd"
            app:max="20000"
            app:progress="10000"
            app:width="250dp"
            app:height="250dp"
            app:progress_color="@color/color_top_bg"
            app:radius="100dp"
            app:small_background_color="#dddddddd"
            app:small_radius="90dp"
            app:small_stroke="0dp"
            app:stroke="3dp" /> -->
            
               <com.suping.i2_watch.view.CircleSeekBar
                   android:layout_centerInParent="true"
            android:id="@+id/pedo_circle"
            android:layout_width="250dp"
            android:layout_height="250dp"
           	app:pointer_size="12dp" />
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="Target" />

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:id="@+id/ll_step"
            android:layout_below="@id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/tv_step_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000" 
                android:textSize="22sp"
                android:textColor="@color/color_top_bg"
                />

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/tv_step_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textColor="@color/grey"
                 />
        </LinearLayout>

		<View
		    android:id="@+id/line"
		    style="@style/pedoline_1dp"
		    android:layout_centerHorizontal="true" 
		    android:layout_below="@id/ll_step"
		    />
		 <LinearLayout
		     android:padding="4dp"
            android:id="@+id/kg"
            android:layout_below="@id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/tv_kg_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步行约" 
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/tv_kg_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.08" 
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/tv_kg_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公里"
                android:textColor="@color/grey"
                 />
        </LinearLayout>
		 <LinearLayout
		       android:padding="4dp"
            android:id="@+id/kal"
            android:layout_below="@id/kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/tv_kal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗约" 
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/tv_kal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.08" 
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/tv_kal_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="千卡"
                android:textColor="@color/grey"
                 />
        </LinearLayout>
		
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_cirle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/advice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Expert advice" />

        <TextView
            android:id="@+id/advice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10,000 steps daily exercise is a healthy and active lifestyle"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/lin_advice"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_light_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_pedo_light" />

            <TextView
                android:id="@+id/tv_light_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="Light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_monitor_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_pedo_medium" />

            <TextView
                android:id="@+id/tv_monitor_pedo"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                  android:singleLine="true"
                android:text="Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_heavy_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_pedo_heavy" />

            <TextView
                android:id="@+id/tv_heavy_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                  android:singleLine="true"
                android:text="Heavy" />
        </LinearLayout>
	</RelativeLayout>
</RelativeLayout>