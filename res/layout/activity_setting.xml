<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <include layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_information"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/selector_bg_menu"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <ImageView
                       android:contentDescription="@string/app_name"
                    android:id="@+id/img_information"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_user" />

                <TextView
                    android:id="@+id/tv_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/img_information"
                    android:text="@string/personal_information" />

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:id="@+id/img_right_1"
                     android:padding="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />

            <RelativeLayout
                android:id="@+id/rl_pedo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/selector_bg_menu"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <ImageView
                       android:contentDescription="@string/app_name"
                    android:id="@+id/img_pedo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_pedotarget" />

                <TextView
                    android:id="@+id/tv_pedo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/img_pedo"
                    android:text="@string/pedometer_target" />

                <ImageView
                       android:contentDescription="@string/app_name"
                    android:id="@+id/img_right_2"
                    android:padding="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/selector_bg_menu"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp" >

                <ImageView
                    android:id="@+id/img_about"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_reminder_nf" />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/img_about"
                    android:text="@string/about" />

                <ImageView
                    android:id="@+id/img_right_3"
                    android:padding="8dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_arrow" />
            </RelativeLayout>
            <View
                style="@style/line"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>