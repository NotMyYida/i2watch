<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.suping.i2_watch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" >

        <RelativeLayout
            android:id="@+id/ll_circle_text"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="9.0"
                android:textColor="@color/color_sleep_text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_pedo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_complete"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="Sleep"
                android:textColor="@color/color_sleep_sport_title"
                android:textSize="18sp" />

            <View
                android:id="@+id/line"
                style="@style/line_1dp"
                android:layout_below="@+id/tv_complete"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true" >

                <ImageView
                    android:id="@+id/img_goal"
                    android:layout_width="20dp"
                android:layout_height="20dp"
                    android:src="@drawable/ic_target_sleep" />

                <TextView
                    android:id="@+id/tv_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="12.0" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textColor="#ff959595" />
            </LinearLayout>
        </RelativeLayout>

        <!-- <com.suping.i2_watch.view.CircleSeekBar
            android:id="@+id/circle_seekbar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:thumb="@drawable/selector_icon_menu"
            app:progress_background="#dddddd"
            app:progress_max="20000"
            app:progress_width="8dp" /> -->
             <com.suping.i2_watch.view.ColorsCircle
        android:id="@+id/color_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        app:background_color="#dddddddd"
        app:max="20000"
        app:progress="20000"
        app:radius="100dp"
        app:small_background_color="#dddddddd"
        app:small_radius="90dp"
        app:small_stroke="3dp"
        app:stroke="6dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Your sleep is good."
        android:textColor="#ff959595" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tips"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_burned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_fire"
                 android:layout_width="20dp"
                android:layout_height="20dp"
                
                android:layout_weight="1"
                android:src="@drawable/ic_deep" />

            <TextView
                android:id="@+id/tv_burned"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="Deep sleep" />

            <TextView
                android:id="@+id/tv_burned_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12.0"
                android:textColor="@color/color_sleep_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_burned_unit"
                android:layout_width="30dp"
             	android:gravity="right"
             		android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hours" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            style="@style/line"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <ImageView
                android:id="@+id/img_time"
               android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_light" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:ems="3"
                android:singleLine="true"
                android:text="Light sleep" />

            <TextView
                android:id="@+id/tv_time_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12.0"
                android:textColor="@color/color_sleep_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_time_unit"
                 android:layout_width="30dp"
             	android:gravity="right"
             		android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hours" />
        </LinearLayout>

        <View
            android:id="@+id/line2"
            style="@style/line"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:id="@+id/ll_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_distance"
             	android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/ic_awake" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="Awake" />

            <TextView
                android:id="@+id/tv_distance_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.2"
                android:textColor="@color/color_sleep_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_distance_unit"
                android:layout_width="30dp"
             	android:gravity="right"
             	android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="hours" />
        </LinearLayout>

        <View
            android:id="@+id/line3"
            style="@style/line"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</RelativeLayout>