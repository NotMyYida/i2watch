<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="line_1dp">
        <item name="android:background">#dddddddd</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="pedoline_1dp">
          <item name="android:background">#ffdddddd</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="line">
        <item name="android:background">#dddddddd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--  -->
    <style name="align_desc">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="align_value">
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <!-- ConnectActivity -->
    <style name="DialogActivity" parent="@android:style/Theme.Holo.Light.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@drawable/dialog_background_color</item>
        <item name="android:windowFrame">@null</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

	<style name="itemlist">
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:paddingLeft">20dp</item>
            <item name="android:background">@drawable/selector_bg_menu</item>
	</style>	
	
	<style name="clock">
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:paddingRight">8dp</item>
            <item name="android:background">@drawable/selector_clock_set_bg</item>
            <item name="android:textSize">18sp</item>
         
            
	</style>	
	    <style name="AnimBottom" parent="@android:style/Animation">  
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>  
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>  
    </style>  
      
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">  
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:backgroundDimEnabled">true</item>  
    </style>  
	
	
</resources>